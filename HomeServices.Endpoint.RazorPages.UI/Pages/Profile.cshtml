@page
@using HomeService.Core.Contracts.CityContracts
@inject ICityAppService CityAppServic;
@model HomeServices.Endpoint.RazorPages.UI.Pages.ProfileModel
@{
    var customerId = TempData["CustomerId"];
    var expertId = TempData["ExpertId"];
    Layout = "Shared/_Layout-Account";
}
<!-- ======================= dashboard Detail ======================== -->
@if ((User.IsInRole("Customer")))
{
    <div class="goodup-dashboard-content">
        <div class="dashboard-widg-bar d-block">
            <form class="submit-form" enctype="multipart/form-data" method="Post" asp-page-handler="UpdateCustomer">
                <input type="hidden" value="@customerId" asp-for="@Model.Customer.Id " />
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12 order-xl-last order-lg-last order-md-last">
                        <div class="d-flex bg-white rounded px-3 py-3 mb-3">
                            <div class="dash-figure">
                                <input type="hidden" value="@Model.Customer.ProfileImgUrl" asp-for="@Model.Customer.ProfileImgUrl" />
                                <div class="dash-figure-thumb"><img src="@Model.Customer.ProfileImgUrl" class="img-fluid rounded" alt="" /></div>
                                <div class="upload-photo-btn">
                                    <div class="Uploadphoto">
                                        <span><i class="fas fa-upload"></i> آپلود تصویر</span>
                                        <input asp-for="@Model.Image" type="file" class="upload">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-8 col-sm-12">
                        <div class="dashboard-list-wraps bg-white rounded mb-4">
                            <div class="dashboard-list-wraps-head br-bottom py-3 px-3">
                                <div class="dashboard-list-wraps-flx">
                                    <h4 class="mb-0 ft-medium fs-md"><i class="fa fa-user-check ms-2 theme-cl fs-sm"></i>مشخصات شخصی</h4>
                                </div>
                            </div>

                            <div class="dashboard-list-wraps-body py-3 px-3">
                                <div class="row">

                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">نام</label>
                                            <input asp-for="@Model.Customer.FirstName" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">نام خانوادگی</label>
                                            <input asp-for="@Model.Customer.LastName" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">پست الکترونیک</label>
                                            <input asp-for="@Model.Customer.Email" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">شماره تماس</label>
                                            <input asp-for="@Model.Customer.PhoneNumber" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">آدرس</label>
                                            <input asp-for="@Model.Customer.Address" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">نام کاربری</label>
                                            <input asp-for="@Model.Customer.UserName" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">توضیحات</label>
                                            <textarea asp-for="@Model.Customer.Description" class="form-control rounded ht-150"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dashboard-list-wraps bg-white rounded mb-4">
                            <div class="dashboard-list-wraps-body py-3 px-3">
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn theme-bg rounded text-light">ذخیره تغییرات</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
@if ((User.IsInRole("Expert")))
{
    <div class="goodup-dashboard-content">
        <div class="dashboard-widg-bar d-block">
            <form class="submit-form" enctype="multipart/form-data" method="Post" asp-page-handler="UpdateExpert">
                <input type="hidden" value="@expertId" asp-for="@Model.Expert.Id " />
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12 order-xl-last order-lg-last order-md-last">
