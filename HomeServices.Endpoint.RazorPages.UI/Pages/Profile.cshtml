                                        <span><i class="fas fa-upload"></i> آپلود تصویر</span>
                                        <input asp-for="@Model.Image" type="file" class="upload">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-8 col-sm-12">
                        <div class="dashboard-list-wraps bg-white rounded mb-4">
                            <div class="dashboard-list-wraps-head br-bottom py-3 px-3">
                                <div class="dashboard-list-wraps-flx">
                                    <h4 class="mb-0 ft-medium fs-md"><i class="fa fa-user-check ms-2 theme-cl fs-sm"></i>مشخصات شخصی</h4>
                                </div>
                            </div>
                            <div class="dashboard-list-wraps-body py-3 px-3">
                                <div class="row">

                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">نام</label>
                                            <input asp-for="@Model.Expert.FirstName" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">نام خانوادگی</label>
                                            <input asp-for="@Model.Expert.LastName" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">پست الکترونیک</label>
                                            <input asp-for="@Model.Expert.Email" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">شماره تماس</label>
                                            <input asp-for="@Model.Expert.PhoneNumber" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">آدرس</label>
                                            <input asp-for="@Model.Expert.Address" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">نام کاربری</label>
                                            <input asp-for="@Model.Expert.UserName" type="text" class="form-control rounded" />
                                        </div>
                                    </div>
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label class="mb-1">توضیحات</label>
                                            <textarea asp-for="@Model.Expert.Description" class="form-control rounded ht-150"></textarea>
                                        </div>
                                    </div>
                                    <!-- Select2 -->
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                        <select asp-for="@Model.Expert.ServiceIds" class="js-example-basic-multiple form-control" multiple="multiple">
                                            @foreach (var service in Model.Services)
                                            {
                                                <option value="@service.Id">@service.Title</option>
                                            }
                                        </select>
                                    </div>
                                    <!-- /Select2 -->
                                </div>
                            </div>
                        </div>
                        <div class="dashboard-list-wraps bg-white rounded mb-4">

                            <div class="dashboard-list-wraps-body py-3 px-3">
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn theme-bg rounded text-light">ذخیره تغییرات</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
}
@section Scripts
{
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {

            $('.js-example-basic-multiple').select2(
                {
                    placeholder: "سرویس هایی که ارائه میدهید را انتخاب کنید",
                    allowClear: true
                });
        });
    </script>
}