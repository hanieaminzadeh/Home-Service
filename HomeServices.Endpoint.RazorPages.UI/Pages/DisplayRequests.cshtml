@page
@using Framework
@model HomeServices.Endpoint.RazorPages.UI.Pages.DisplayRequestsModel
@{
    Layout = "Shared/_Layout-Account";
}
<!-- ======================= dashboard Detail ======================== -->
    <div class="goodup-dashboard-content">
    <div class="dashboard-widg-bar d-block mb-5">
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="dashboard-list-wraps bg-white rounded mb-4">
                    <div class="dashboard-list-wraps-head br-bottom py-3 px-3">
                        <div class="dashboard-list-wraps-flx">
                            <h4 class="mb-0 ft-medium fs-md"><i class="fa fa-file-alt ms-2 theme-cl fs-sm"></i>درخواست های من</h4>
                        </div>
                    </div>
                    <div class="dashboard-list-wraps-body py-3 px-3">
                        <div class="dashboard-listing-wraps">
                            @foreach (var order in Model.Orders)
                            {
                                <div class="dsd-single-listing-wraps">
                                    <div class="dsd-single-lst-thumb"><img src="assets/img/Customer-service.png" class="img-fluid" alt="" /></div>
                                    <div class="dsd-single-lst-caption">
                                        <div class="dsd-single-lst-title"><h5>@order.ServiceName</h5></div>
                                        <div class="ico-content">
                                            <div class="Goodup-ft-first">
                                                <div class="Goodup-price-range">
                                                    <span class="ft-medium">تاریخ ثبت درخواست : @order.DateOfRegisteration.ToPersianString("dddd, dd MMMM,yyyy")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="dsd-single-lst-footer">
                                            <a asp-page="RequestDetails" asp-route-orderId="@order.Id" class="btn btn-view mr-1"><i class="fas fa-eye ms-1"></i>نمایش جزئیات درخواست</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@* </div> *@
<!-- ======================= dashboard Detail End ======================== -->

<a id="tops-button" class="top-scroll" title="Back to top" href="#"><i class="ti-arrow-up"></i></a>

